
<h1> CREATE ACCOUNT </h1>

<main>
    <div class="form">
    <%= form_for @new_user do |f| %>

        <%= f.label :username, "Enter Username" %>
        <%= f.text_field :username %>
        <br><br>

        <%= f.label :password, "Enter Password" %>
        <%= f.password_field :password %>
        <br><br>

        <%= f.label :first_name, "Enter First Name" %>
        <%= f.text_field :first_name %>
        <br><br>

        <%= f.label :last_name, "Enter Last Name" %>
        <%= f.text_field :last_name %>
        <br><br>

        <%= f.label :email, "Enter Email" %>
        <%= f.text_field :email %>
        <br><br>

        <%= f.submit "Done" %>

    <% end %>
    </div>

</main>