<h1> LOGIN </h1>


<%= form_tag "/handle_login" do %>

    <%= label_tag :username, "Enter Username" %>
    <%= text_field_tag :username %>

    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password %>

    <%= submit_tag "Login" %>
    
    <%= link_to "Create Account", new_user_form_path %>

<% end %>